</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
  <script src="/src/JS/link.js"></script>
  <%- include(headerFile) %>

  <div class="body_wrap">
  </div>
  <main>
    <div class="current-Titile">
      <div class="current-Titile_wrap">
        <div class="current-Titile_main">
          <div class="current-Titile_interact">
            <div class="Titile_interact_like">
              <i class="fa-solid fa-thumbs-up"></i>
              Thích
              <span>1</span>
            </div>
            <div class="Titile_interact_share">
              Chia sẻ
            </div>
