        document.querySelectorAll('.radio-input_search label')[0].style.background = 'var(--white-color)';
        drop_tag(<%=typesearch%>);
        document.querySelectorAll('.radio-input_search label')[<%=typesearch%>].style.background = 'var(--author-color)'
</script>
