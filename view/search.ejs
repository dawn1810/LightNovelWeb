<body>
  <script src="/src/JS/link.js"></script>

  <%- include(headerFile) %>

    <main>


      <ul class="menu-tag">
        <li class="active">
          <a href="/" title="doc truyen">
            <i class="fa-solid fa-house"></i> Truyện</a>>
        </li>
        <li class="active "><a class="search_value" href="<%='/search?search='+encodeURI(what_search)%>">
            <%=what_search%>
          </a></li>
      </ul>

    
      <h1 id="current-category">Kết quả tìm kiếm</h1>

      <div class="body_main">
        <div class="top_popular">
          <div class="novel_wrap novel1">
            <div class="novel ">
              <% if (names.length >0) {%>
                <% for (let i=0; i < names.length; i++) { %>
                  <a href="/reviews/<%= names[i]._id %>" class="novel_item">
                    <div>
                      <div class="novel_item_main">
                        <div class="novel_item_main_img">
                          <img src="<%= names[i].image %>" alt referrerpolicy="no-referrer">
                        </div>
                        <div class="novel_title" onclick="myFunction()">
                          <div class="novel_name">
                            <%= names[i].name %>
                          </div>
                          <div class="novel_author">
                            Tác giả : <span>
                              <%= names[i].author %>
                            </span>
                          </div>
                          <div class="novel_chapter">
                            Chap : <span>
                              <%= names[i].no_chapters %>
                            </span>
                            <div style="font-size: 13px;">
                              <%= names[i].status %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </a>
                  <% } %>
                

              <%}else{%>
                  <span class="no_novel">Không tìm thấy kết quả</span>
                <% } %>
            </div>
            <% if (name_more === true) {%>
              <div class="search_more">
                <button class="search_more1">
                  <span>Xem thêm</span>
                  <svg width="34" height="34" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="37" cy="37" r="35.5" stroke="var(--black-text)" stroke-width="3"></circle>
                    <path
                      d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z"
                      fill="var(--black-text)"></path>
                  </svg>
                </button>
              </div>
            <%}%>
          </div>
          <div class="novel_wrap novel2">
            <div class="novel">
              <% if (genres.length > 0) {%>

                <% for (let i=0; i < genres.length; i++) { %>
                  <a href="/reviews/<%= genres[i]._id %>" class="novel_item">
                    <div>
                      <div class="novel_item_main">
                        <div class="novel_item_main_img">
                          <img src="<%= genres[i].image %>" alt referrerpolicy="no-referrer">
                        </div>
                        <div class="novel_title" onclick="myFunction()">
                          <div class="novel_name">
                            <%= genres[i].name %>
                          </div>
                          <div class="novel_author">
                            Tác giả : <span>
                              <%= genres[i].author %>
                            </span>
                          </div>
                          <div class="novel_chapter">
                            Chap : <span>
                              <%= genres[i].no_chapters %>
                            </span>
                            <div style="font-size: 13px;">
                              <%= genres[i].status %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </a>
                  <% } %>

              <%}else{%>
                  <span class="no_novel">Không tìm thấy kết quả</span>
                <% } %>

            </div>
            <% if (genres_more === true) {%>
              <div class=" search_more">
                <button class="search_more2">
                  <span>Xem thêm</span>
                  <svg width="34" height="34" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="37" cy="37" r="35.5" stroke="var(--black-text)" stroke-width="3"></circle>
                    <path
                      d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z"
                      fill="var(--black-text)"></path>
                  </svg>
                </button>
              </div>
              <%}%>
          </div>
          <div class="novel_wrap novel3">
            <div class="novel">
            <% if (authors.length >0) {%>
              <% for (let i=0; i < authors.length; i++) { %>
                <a href="/reviews/<%= authors[i]._id %>" class="novel_item">
                  <div>
                    <div class="novel_item_main">
                      <div class="novel_item_main_img">
                        <img src="<%= authors[i].image %>" alt referrerpolicy="no-referrer">
                      </div>
                      <div class="novel_title" onclick="myFunction()">
                        <div class="novel_name">
                          <%= authors[i].name %>
                        </div>
                        <div class="novel_author">
                          Tác giả : <span>
                            <%= authors[i].author %>
                          </span>
                        </div>
                        <div class="novel_chapter">
                          Chap : <span>
                            <%= authors[i].no_chapters %>
                          </span>
                          <div style="font-size: 13px;">
                            <%= authors[i].status %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
                <% } %>

              <%}else{%>
                  <span class="no_novel">Không tìm thấy kết quả</span>
                <% } %>

              
              

            </div>
            <% if (authors_more === true) {%>
              <div class="search_more">
                <button class="search_more3">
                  <span>Xem thêm</span>
                  <svg width="34" height="34" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="37" cy="37" r="35.5" stroke="var(--black-text)" stroke-width="3"></circle>
                    <path
                      d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z"
                      fill="var(--black-text)"></path>
                  </svg>
                </button>
              </div>
              <%}%>
          </div>
        </div>
      </div>
      </div>
    </main>

    <%- include(footerFile) %>
</body>

 

<script src="/src/JS/category-page.js"></script>

