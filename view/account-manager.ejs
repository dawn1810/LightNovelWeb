<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://kit.fontawesome.com/b8977956b3.js" crossorigin="anonymous"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
  <title>Quản lý tài khoản</title>
 <link rel="stylesheet" href="../src/CSS/account-manager.css">
</head>

<script>
  const currentURL = window.location.origin;
</script>
<body>


  <%- include(headerFile) %>
  <div class="modal_main" style="display: block;min-height: 85vh;margin-top: 70px;">
    <div class="modal_admin">
    
      <form class="form_admin" >
        <div class="account_list">
          <% accounts.forEach(function(user) { %>

          <div class="account" id="<%=user.id%>">
            <div class="left_gr">
              <div class="avt_container">
                <% if (user.anh_dai_dien) { %>
                  <img src='<%= user.anh_dai_dien %>' alt="">
                <% } else { %>
                  <img src='https://static.wikia.nocookie.net/f5bef280-f4ab-42a1-b7fe-378c176a4da1/scale-to-width-down/800' alt="">
                <% } %>
                

              </div>
              <h2><%= user.ten_hien_thi %></h2>
            </div>
            <input type="hidden" value='<%= user.id %>'>
            <div class="right_gr">
              <% if (user.role == 0  && user.last_role ==2) { %>

                  <button class="block_account_f5 open">
                    Mở khoá người dùng
                  </button>
                  <button class="block_account block">
                    Khoá người dùng
                  </button>
                  <button class="author_btn last" disabled>
                    Xoá quyền tác giả
                  </button>
                  <button class="author_btn_f5 block open">
                    Thêm quyền tác giả
                  </button>
               
              <% } else if ( user.role ==0 && user.last_role == 1) { %>
                <button class="block_account_f5 open">
                  Mở khoá người dùng
                </button>
                <button class="block_account block">
                  Khoá người dùng
                </button>
                <button class="author_btn block">
                  Xoá quyền tác giả
                </button>
                <button class="author_btn_f5 last open" disabled>
                  Thêm quyền tác giả
                </button>
              <% } else if ( user.role ==0 && user.last_role == 0) { %>
                <button class="block_account_f5 open">
                  Mở khoá người dùng
                </button>
                <button class="block_account block">
                  Khoá người dùng
                </button>
                <button class="author_btn block">
                  Xoá quyền tác giả
                </button>
                <button class="author_btn_f5 last open" disabled>
                  Thêm quyền tác giả
                </button>
              <% }
              else if(user.role ==1) { %>
                <button class="block_account_f5 open block">
                  Mở khoá người dùng
                </button>
                <button class="block_account ">
                  Khoá người dùng
                </button>
                <button class="author_btn block">
                  Xoá quyền tác giả
                </button>
                <button class="author_btn_f5 open">
                  Thêm quyền tác giả
                </button>
              <% } else { %>
                <button class="block_account_f5 open block">
                  Mở khoá người dùng
                </button>
                <button class="block_account">
                  Khoá người dùng
                </button>
                <button class="author_btn">
                  Xoá quyền tác giả
                </button>
                <button class="author_btn_f5 block open">
                  Thêm quyền tác giả
                </button>
              <% } %>
            </div>
          </div>

          <% }); %>



        </div>
      </form>
    </div>
  </div>
  <%- include(footerFile) %>

  <script src="../src/JS/account-manager.js"></script>
</body>

</html>